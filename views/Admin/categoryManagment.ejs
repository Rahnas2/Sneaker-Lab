<%- include('partials/header') %>  

<!-- head -->
<div class="container pt-4">
    <div class="mb-3">category Managment</div>

    <div class="d-flex justify-content-end">
        <button class="mb-3 add-btn border-0" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
            <a href="#" class="text-decoration-none text-white ">+ Add Category</a>
            
        </button>
    </div>
    
    <!-- Modal -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="add-category" action="/admin/addCategory" method="POST">
                <div class="modal-body">
                    <div id="category-error" class="alert alert-danger d-none"></div>
                     <label for="categoryName" class="mb-1">Category Name</label><br>
                    <input id="category-name"  type="text" name="categoryName" required><br><br>
                    <label for="categoryName" class="mb-1">Category Discription</label><br>
                    <input id="category-description" name="categoryDescription" type="text" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            </div>
        </div>
    </div>



    <!-- serach option -->
    <div class="search-wrapper">
    <input type="text" class="searchbar" id="searchCategory" placeholder="Search for names..">
    <i class="fa fa-search search-icon"></i>
</div>
<!-- category list -->
<div class="table-responsive container border mt-2 ">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th class="checkbox-align">
                <input type="checkbox" id="selectAll"> 
            <th scope="col">Category Name</th>
            <th scope="col">description</th> 
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>

    <tbody>
        <% categoryList.forEach(category => { %>
         <tr class="align-middle">
             <th class="checkbox-align">
                 <input type="checkbox" id="selectAll">
             </th>
              <td><%=category.categoryName %></td>
              <td><%=category.categoryDescription %></td>
              <td class="text-end">
                <button class="bg-danger text-white border-0" onclick="deleteCategory('<%=category._id %>')">Delete</button> 
             </td>
              
         </tr>
      <% }) %>
     </tbody>
    </table>
</div>

<!-- pagination control -->

<nav aria-label="Page navigation example">
    <ul class="pagination mt-2 justify-content-end">
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
            </li>
        <% } %>
    
      <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
    </ul>
  </nav>
 <div class="alert alert-success d-none" id="success-message"></div>
 <div class="alert alert-danger d-none" id="error-message"></div>
</div>
</div>

</main>



<script>

document.getElementById('searchCategory').addEventListener('keypress',(event)=>{
            if(event.key === 'Enter'){
                event.preventDefault()
                const searchQuery = event.target.value.trim()
                if(searchQuery){
                    window.location.href = `/admin/categoryManagment?search=${encodeURIComponent(searchQuery)}`
                }
            }
        })

        const successMessage = document.getElementById('success-message')
        const errorMessage = document.getElementById('error-message')
        const message = localStorage.getItem('successMessage');
    
    if (message) {
        successMessage.textContent = message;
        successMessage.classList.remove('d-none');
        localStorage.removeItem('successMessage'); 
    }

        function deleteCategory(categoryId){
            confirm('are you sure you want to delete category')

            fetch(`/admin/deleteCategory/${categoryId}`,{
                method:'POST',
                headers:{
                    'Content-Type': 'application/json'
                },
                body:JSON.stringify({categoryId})
            })
            .then(response => response.json())
            .then(result =>{
                if(result.success){
                    location.reload()
                    localStorage.setItem('successMessage', result.message)
                }else{
                    console.error('error during soft delete the category',result.message)
                }
            })
            .catch(error => console.log(error))
        }

   const categoryForm = document.getElementById('add-category')
   const categoryError = document.getElementById('category-error')
   
   categoryForm.addEventListener('submit',(event)=>{
         event.preventDefault()
         
         try {
            const formData = new FormData(categoryForm)

         const data ={
            categoryName:formData.get('categoryName'),
            categoryDescription:formData.get('categoryDescription')
         }

         fetch('/admin/addCategory',{
            method:'POST',
            headers:{
                'Content-Type':'application/json'
            },
            body:JSON.stringify(data)
         })
         .then(response => response.json())
         .then(result=>{
            if(result.success){
                const modal = bootstrap.Modal.getInstance(document.getElementById('addCategoryModal'));
                modal.hide();

                location.reload()
            }else{
                console.log('error')
                categoryError.textContent = result.error;
                categoryError.classList.remove('d-none');
            }
         })
         }catch (error) {
            console.error('errror:',error)
        }
           
    })
</script>

<%- include('partials/footer') %>