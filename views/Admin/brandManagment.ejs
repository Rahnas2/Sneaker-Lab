<%- include('partials/header') %>  

<!-- head -->
<div class="container pt-4">
    <div class="mb-3">Brand Managment</div>

    <div class="d-flex justify-content-end">
        <button class="mb-3 add-btn border-0" data-bs-toggle="modal" data-bs-target="#addBrandModal">
            <a href="#" class="text-decoration-none text-white ">+ Add Brand</a>
            
        </button>
    </div>
    
    <!-- Modal -->
    <div class="modal fade" id="addBrandModal" tabindex="-1" aria-labelledby="addBrandModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBrandModalLabel">Add New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="add-brand" action="/admin/addBrand" method="POST">
                <div class="modal-body">
                    <div id="brand-error" class="alert alert-danger d-none"></div>
                     <label for="brandName" class="mb-1">Brand Name</label><br>
                    <input id="brand-name"  type="text" name="brandName" required><br><br>
                    <label for="brandName" class="mb-1">Brand Discription</label><br>
                    <input id="brand-description" name="brandDescription" type="text" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            </div>
        </div>
    </div>



    <!-- serach option -->
    <div class="search-wrapper">
    <input type="text" class="searchbar" id="searchBrand" placeholder="Search for names..">
    <i class="fa fa-search search-icon"></i>
</div>
<!-- category list -->
<div class="table-responsive container border mt-2 ">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th class="checkbox-align">
                <input type="checkbox" id="selectAll"> 
            <th scope="col">Brand Name</th>
            <th scope="col">description</th> 
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>

    <tbody>
        <% brandList.forEach(brand => { %>
         <tr class="align-middle">
             <th class="checkbox-align">
                 <input type="checkbox" id="selectAll">
             </th>
              <td><%=brand.brandName %></td>
              <td><%=brand.brandDescription %></td>
              <td class="text-end">
                <button class="bg-danger text-white border-0" onclick="deleteBrand('<%=brand._id %>')">Delete</button> 
             </td>
              
         </tr>
      <% }) %>
     </tbody>
    </table>
</div>

<!-- pagination control -->

<nav aria-label="Page navigation example">
    <ul class="pagination mt-2 justify-content-end">
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
            </li>
        <% } %>
    
      <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
    </ul>
  </nav>
  <div class="alert alert-success d-none" id="success-message"></div>
  <div class="alert alert-danger d-none" id="error-message"></div>
</div>
</div>

</main>
<script>
document.getElementById('searchBrand').addEventListener('keypress',(event)=>{
    if(event.key === 'Enter'){
        event.preventDefault()
        const searchQuery = event.target.value.trim()
        if(searchQuery){
            window.location.href = `/admin/brandManagment?search=${encodeURIComponent(searchQuery)}`
        }
    }
})
      
        const successMessage = document.getElementById('success-message')
        const errorMessage = document.getElementById('error-message')
        const message = localStorage.getItem('successMessage');
    
    if (message) {
        successMessage.textContent = message;
        successMessage.classList.remove('d-none');
        localStorage.removeItem('successMessage'); 
    }

        function deleteBrand(brandId){
            confirm('are you sure you want to delete the brand')

            fetch(`/admin/deleteBrand/${brandId}`,{
                method:'POST',
                headers:{
                    'Content-Type': 'application/json'
                },
                body:JSON.stringify({brandId})
            })
            .then(response => response.json())
            .then(result =>{
                if(result.success){
                    location.reload()
                    localStorage.setItem('successMessage',result.message)
                }else{
                    console.error('error during soft delete the brand',result.message)
                }
            })
            .catch(error => console.log(error))
        }

   const brandForm = document.getElementById('add-brand')
   const brandError = document.getElementById('brand-error')
   
   brandForm.addEventListener('submit',(event)=>{
         event.preventDefault()
         
         try {
            const formData = new FormData(brandForm)

         const data ={
            brandName:formData.get('brandName'),
            brandDescription:formData.get('brandDescription')
         }

         fetch('/admin/addBrand',{
            method:'POST',
            headers:{
                'Content-Type':'application/json'
            },
            body:JSON.stringify(data)
         })
         .then(response => response.json())
         .then(result=>{
            if(result.success){
                const modal = bootstrap.Modal.getInstance(document.getElementById('addBrandModal'));
                modal.hide();

                location.reload()
            }else{
                console.log('error')
                brandError.textContent = result.error;
                brandError.classList.remove('d-none');
            }
         })
         }catch (error) {
            console.error('errror:',error)
        }
           
    })




</script>

<%- include('partials/footer') %>